{
  "name": "express-reaccess",
  "version": "2.0.0",
  "description": "Express/Connect middleware to manage API access on a RegExp basis",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha src/*.mocha.js",
    "cover": "istanbul cover --report html _mocha -- src/**/*.mocha.js -R spec -t 5000",
    "coveralls:build": "istanbul cover --include-all-sources _mocha --report lcovonly -- src/**/*.mocha.js -R spec -t 5000",
    "coveralls:send": "cat ./coverage/lcov.info | coveralls && rm -rf ./coverage/lcov.info",
    "coveralls": "npm run coveralls:build && npm run coveralls:send",
    "lint": "eslint src/**/*.js",
    "cli": "env NPM_RUN_CLI=1",
    "preversion": "npm test && npm run lint"
  },
  "engines": {
    "node": ">=4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/SimpliField/express-reaccess.git"
  },
  "keywords": [
    "express",
    "connect",
    "middleware",
    "auth",
    "access",
    "rights",
    "regexp"
  ],
  "author": "Nicolas Froidure (Simplifield)",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/SimpliField/express-reaccess/issues"
  },
  "devDependencies": {
    "coveralls": "~2.11.2",
    "eslint": "^3.2.2",
    "eslint-config-simplifield": "^3.0.0",
    "express": "^4.14.0",
    "istanbul": "^0.4.4",
    "mocha": "^3.0.1",
    "mocha-lcov-reporter": "^1.2.0",
    "supertest": "^2.0.0"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "miniquery": "^1.0.0",
    "regexp-tpl": "^2.0.0"
  }
}
